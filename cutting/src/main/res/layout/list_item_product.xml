<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_shift_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Shift"
            android:textSize="20sp"
            android:textColor="#333"/>


        <TextView
            android:id="@+id/tv_item_work_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Work Time"
            android:textSize="20sp"
            android:textColor="#333"/>


        <TextView
            android:id="@+id/tv_item_design_idx"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Design IDX"
            android:textSize="20sp"
            android:textColor="#333"/>


        <TextView
            android:id="@+id/tv_item_target"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Target"
            android:textSize="20sp"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/tv_item_actual"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Actual"
            android:textSize="20sp"
            android:textColor="#333"/>
        <TextView
            android:id="@+id/tv_item_product_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Product Rate"
            android:textSize="20sp"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/tv_item_defective"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Defective"
            android:textSize="20sp"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/tv_item_quality_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Quality Rate"
            android:textSize="20sp"
            android:textColor="#333"/>
    </LinearLayout>

</LinearLayout>
