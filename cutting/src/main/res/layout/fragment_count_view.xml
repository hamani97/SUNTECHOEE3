<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CountViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1c2c39">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="@string/label_shift"
                            android:textSize="112sp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_count_view_target"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="100"
                            android:textSize="112sp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="@string/label_actual"
                            android:textSize="112sp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_count_view_actual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="30"
                            android:textSize="112sp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_count_view_ratio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="30%"
                            android:textSize="112sp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>

                        <ImageButton
                            android:id="@+id/btn_defective_plus"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical"
                            android:background="@mipmap/btn_icon_defective"
                            android:stateListAnimator="@null"/>

                        <TextView
                            android:id="@+id/tv_count_view_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="1H"
                            android:textSize="112sp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_exit"
                            android:layout_width="180dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:background="#f8ad13"
                            android:stateListAnimator="@null"
                            android:text="@string/button_end_work"
                            android:textSize="24sp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_current_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="40dp"
                                android:text="2000-01-01"
                                android:textSize="20sp"
                                android:textColor="#fff"
                                android:visibility="visible"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_count_view_time_ms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="MS"
                            android:textSize="40sp"
                            android:textColor="#fff"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_pieces"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="1 Count"
                            android:textSize="30sp"
                            android:textColor="#fff"/>

                        <TextView
                            android:id="@+id/tv_side_pieces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="= 1 Pieces"
                            android:textSize="30sp"
                            android:textColor="#fff"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/ib_pieces_1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/btn_shoes_1"/>
                        <ImageButton
                            android:id="@+id/ib_pieces_2_1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/btn_shoes_2"/>
                        <ImageButton
                            android:id="@+id/ib_pieces_2_2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/btn_shoes_2"/>
                        <ImageButton
                            android:id="@+id/ib_pieces_4_1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_shoes_4"/>
                        <ImageButton
                            android:id="@+id/ib_pieces_4_2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_shoes_4"/>

                    </LinearLayout>
                </LinearLayout>
                <!-- 차트 -->
                <LinearLayout
                    android:id="@+id/ll_charts"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="OEE"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:background="#383838"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#222222"
                        android:orientation="vertical">

                        <com.dinuscxj.progressbar.CircleProgressBar
                            android:id="@+id/line_progress1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerInParent="true"
                            app:background_color="#fff"
                            app:progress_start_color="#f00"
                            app:progress_end_color="#f00"
                            app:progress_background_color="#fff"
                            app:progress_text_color="#000"
                            app:draw_progress_text="false"
                            app:progress_text_size="24dp"
                            app:style="solid"
                            android:progress="50"/>

                        <TextView
                            android:id="@+id/tv_oee_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="10%"
                            android:textSize="24sp"
                            android:textColor="#000"/>

                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/label_chart_availability"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:background="#383838"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#222222"
                        android:orientation="vertical">

                        <com.dinuscxj.progressbar.CircleProgressBar
                            android:id="@+id/line_progress2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerInParent="true"
                            app:background_color="#fff"
                            app:progress_start_color="#87c947"
                            app:progress_end_color="#87c947"
                            app:progress_background_color="#fff"
                            app:progress_text_color="#000"
                            app:draw_progress_text="false"
                            app:progress_text_size="24dp"
                            app:style="solid"
                            android:progress="50"/>
                        <TextView
                            android:id="@+id/tv_oee_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="10%"
                            android:textSize="24sp"
                            android:textColor="#000"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/label_chart_performance"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:background="#383838"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#222222"
                        android:orientation="vertical">

                        <com.dinuscxj.progressbar.CircleProgressBar
                            android:id="@+id/line_progress3"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerInParent="true"
                            app:background_color="#fff"
                            app:progress_start_color="#ffb702"
                            app:progress_end_color="#ffb702"
                            app:progress_background_color="#fff"
                            app:progress_text_color="#000"
                            app:draw_progress_text="false"
                            app:progress_text_size="24dp"
                            app:style="solid"
                            android:progress="50"/>
                        <TextView
                            android:id="@+id/tv_oee_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="10%"
                            android:textSize="24sp"
                            android:textColor="#000"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/label_chart_quality"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:background="#383838"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#222222"
                        android:orientation="vertical">

                        <com.dinuscxj.progressbar.CircleProgressBar
                            android:id="@+id/line_progress4"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerInParent="true"
                            app:background_color="#fff"
                            app:progress_start_color="#3f8cd6"
                            app:progress_end_color="#3f8cd6"
                            app:progress_background_color="#fff"
                            app:progress_text_color="#000"
                            app:draw_progress_text="false"
                            app:progress_text_size="24dp"
                            app:style="solid"
                            android:progress="50"/>
                        <TextView
                            android:id="@+id/tv_oee_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="10%"
                            android:textSize="24sp"
                            android:textColor="#000"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/layout_bottom_info_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
