<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DesignInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1c2c39">

        <include layout="@layout/layout_top_menu_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="1120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- AVAILABLE INFO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="520dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="DESIGN INFO"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:background="#000"/>

                    <LinearLayout
                        android:layout_width="520dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="@string/search"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <EditText
                            android:id="@+id/et_setting_server_ip"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#87c947"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="#304053">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/list_header_idx"
                            android:textSize="20sp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/list_header_model"
                            android:textSize="20sp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/list_header_article"
                            android:textSize="20sp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/list_header_material"
                            android:textSize="20sp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/list_header_component"
                            android:textSize="20sp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/list_header_cycle_time"
                            android:textSize="20sp"
                            android:textColor="#fff"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:background="#fff">

                        <ListView
                            android:id="@+id/lv_design_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@color/list_item_bg_color"
                            android:dividerHeight="0dp"
                            android:background="@color/list_item_bg_color"
                            />

                    </LinearLayout>

                </LinearLayout>

                <!-- PIECES INFO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="520dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:text="@string/title_pieces_info"
                            android:textSize="24sp"
                            android:textColor="#fff"
                            android:background="#000"/>

                        <LinearLayout
                            android:layout_width="520dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="8dp"
                                android:gravity="center"
                                android:text="@string/label_pieces"
                                android:textSize="20sp"
                                android:textColor="#fff"
                                android:background="#2f3f51"/>

                            <EditText
                                android:id="@+id/et_design_pieces"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="8dp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:inputType="number"
                                android:text="1"
                                android:textSize="20sp"
                                android:textColor="#fff"
                                android:background="#87c947"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="8dp"
                                android:paddingLeft="10dp"
                                android:gravity="start|center_vertical"
                                android:text="@string/guide_pieces"
                                android:textSize="20sp"
                                android:textColor="#fff"
                                android:background="#2f3f51"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/ib_pieces_1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/btn_icon_count_pieces_1"/>
                        <ImageButton
                            android:id="@+id/ib_pieces_2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/btn_icon_count_pieces_2"/>
                        <ImageButton
                            android:id="@+id/ib_pieces_4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/btn_icon_count_pieces_4"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="100dp"
            android:paddingBottom="20dp"
            android:gravity="end"
            android:background="#1c2c39"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_setting_cancel"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:background="@drawable/shape_orange_rectangle_button"
                android:stateListAnimator="@null"
                android:text="@string/cancel"
                android:textSize="24sp"
                android:textColor="#fff"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_setting_confirm"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:background="@drawable/shape_orange_rectangle_button"
                android:stateListAnimator="@null"
                android:text="@string/confirm"
                android:textSize="24sp"
                android:textColor="#fff"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
