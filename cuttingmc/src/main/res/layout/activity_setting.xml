<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1c2c39">

        <include layout="@layout/layout_top_menu_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout style="@style/tab_btn_block">
            <Button
                android:id="@+id/btn_setting_system"
                style="@style/tab_btn_on"
                android:layout_width="220dp"
                android:stateListAnimator="@null"
                android:text="SYSTEM SETTING" />
            <Button
                android:id="@+id/btn_setting_count"
                style="@style/tab_btn_off"
                android:layout_width="220dp"
                android:stateListAnimator="@null"
                android:text="COUNT SETTING" />
            <Button
                android:id="@+id/btn_setting_target"
                style="@style/tab_btn_off"
                android:layout_width="220dp"
                android:stateListAnimator="@null"
                android:text="TARGET SETTING" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_setting_target"
                android:layout_width="1080dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/section_title_text"
                    android:text="@string/title_count_target_type" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            android:id="@+id/tv_setting_target_type_server"
                            style="@style/setting_line_title"
                            android:layout_width="200dp"
                            android:text="SERVER"
                            android:textStyle="bold"
                            android:textColor="@color/bottom_text_color" />
                    </LinearLayout>

                    <LinearLayout style="@style/tab_btn_block" android:layout_marginTop="8dp">
                        <Button
                            android:id="@+id/btn_setting_target_type_server_accumulate"
                            style="@style/tab_btn_off"
                            android:layout_width="200dp"
                            android:layout_marginRight="16dp"
                            android:stateListAnimator="@null"
                            android:text="Accumulate"
                            android:textColor="@color/bottom_text_color" />
                        <Button
                            android:id="@+id/btn_setting_target_type_server_hourly"
                            style="@style/tab_btn_off"
                            android:layout_width="200dp"
                            android:layout_marginRight="16dp"
                            android:stateListAnimator="@null"
                            android:text="Hourly" />
                        <Button
                            android:id="@+id/btn_setting_target_type_server_shifttotal"
                            style="@style/tab_btn_off"
                            android:layout_width="200dp"
                            android:stateListAnimator="@null"
                            android:text="Shift Total" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/setting_line"
                        android:layout_marginTop="24dp">
                        <TextView
                            android:id="@+id/tv_setting_target_type_manual"
                            style="@style/setting_line_title"
                            android:layout_width="200dp"
                            android:text="Manual"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout style="@style/tab_btn_block" android:layout_marginTop="8dp">
                        <Button
                            android:id="@+id/btn_setting_target_type_manual_accumulate"
                            style="@style/tab_btn_off"
                            android:layout_width="200dp"
                            android:layout_marginRight="16dp"
                            android:stateListAnimator="@null"
                            android:text="Accumulate" />
                        <Button
                            android:id="@+id/btn_setting_target_type_manual_hourly"
                            style="@style/tab_btn_off"
                            android:layout_width="200dp"
                            android:layout_marginRight="16dp"
                            android:stateListAnimator="@null"
                            android:text="Hourly" />
                        <Button
                            android:id="@+id/btn_setting_target_type_manual_shifttotal"
                            style="@style/tab_btn_off"
                            android:layout_width="200dp"
                            android:stateListAnimator="@null"
                            android:text="Shift Total" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/setting_line"
                        android:layout_marginTop="24dp">
                        <TextView
                            style="@style/setting_line_title"
                            android:layout_width="200dp"
                            android:text="Target per Hour"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="60dp"
                            android:orientation="horizontal">
                            <LinearLayout style="@style/setting_line">
                                <TextView
                                    style="@style/setting_line_title"
                                    android:text="1 Shift" />
                                <EditText
                                    android:id="@+id/tv_shift_1"
                                    style="@style/setting_line_data"
                                    android:singleLine="true"
                                    android:text=""
                                    android:background="#87c947" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="60dp"
                            android:orientation="horizontal">
                            <LinearLayout style="@style/setting_line">
                                <TextView
                                    style="@style/setting_line_title"
                                    android:text="2 Shift" />
                                <EditText
                                    android:id="@+id/tv_shift_2"
                                    style="@style/setting_line_data"
                                    android:singleLine="true"
                                    android:text=""
                                    android:background="#87c947" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout style="@style/setting_line">
                                <TextView
                                    style="@style/setting_line_title"
                                    android:text="3 Shift" />
                                <EditText
                                    android:id="@+id/tv_shift_3"
                                    style="@style/setting_line_data"
                                    android:singleLine="true"
                                    android:text=""
                                    android:background="#87c947" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_setting_count"
                android:layout_width="1080dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/section_title_text"
                    android:text="@string/title_count_info" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:orientation="horizontal">
                        <LinearLayout style="@style/setting_line">
                            <TextView
                                style="@style/setting_line_title"
                                android:text="1 Layer" />
                            <TextView
                                android:id="@+id/tv_layer_1"
                                style="@style/setting_line_data"
                                android:text="-"
                                android:background="#8d4dab" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:orientation="horizontal">
                        <LinearLayout style="@style/setting_line">
                            <TextView
                                style="@style/setting_line_title"
                                android:text="2 Layer" />
                            <TextView
                                android:id="@+id/tv_layer_2"
                                style="@style/setting_line_data"
                                android:text="-"
                                android:background="#8d4dab" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout style="@style/setting_line">
                            <TextView
                                style="@style/setting_line_title"
                                android:text="4 Layer" />
                            <TextView
                                android:id="@+id/tv_layer_4"
                                style="@style/setting_line_data"
                                android:text="-"
                                android:background="#8d4dab" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:orientation="vertical">
                        <LinearLayout style="@style/setting_line">
                            <TextView
                                style="@style/setting_line_title"
                                android:text="6 Layer" />
                            <TextView
                                android:id="@+id/tv_layer_6"
                                style="@style/setting_line_data"
                                android:text="-"
                                android:background="#8d4dab" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:orientation="horizontal">
                        <LinearLayout style="@style/setting_line">
                            <TextView
                                style="@style/setting_line_title"
                                android:text="8 Layer" />
                            <TextView
                                android:id="@+id/tv_layer_8"
                                style="@style/setting_line_data"
                                android:text="-"
                                android:background="#8d4dab" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout style="@style/setting_line">
                            <TextView
                                style="@style/setting_line_title"
                                android:text="10 Layer" />
                            <TextView
                                android:id="@+id/tv_layer_10"
                                style="@style/setting_line_data"
                                android:text="-"
                                android:background="#8d4dab" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_setting_system"
                android:layout_width="1080dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">

                <!-- COUNTER DEVICE INFO -->
                <LinearLayout
                    android:layout_width="520dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/section_title_text"
                        android:text="@string/title_counter_device_info" />

                    <LinearLayout style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="WiFi" />
                        <TextView
                            android:id="@+id/tv_setting_wifi"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#4d4d4d" />
                    </LinearLayout>

                    <!-- IP -->
                    <LinearLayout style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="IP" />
                        <TextView
                            android:id="@+id/tv_setting_ip"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#4d4d4d" />
                    </LinearLayout>

                    <!-- MAC -->
                    <LinearLayout style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="MAC" />
                        <TextView
                            android:id="@+id/tv_setting_mac"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#4d4d4d" />
                    </LinearLayout>

                    <!-- Factory -->
                    <LinearLayout style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_factory" />
                        <TextView
                            android:id="@+id/tv_setting_factory"
                            style="@style/setting_line_data"
                            android:text=""
                            android:background="#8d4dab" />
                    </LinearLayout>

                    <!-- Room -->
                    <LinearLayout style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_room" />
                        <TextView
                            android:id="@+id/tv_setting_room"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#8d4dab" />
                    </LinearLayout>

                    <!-- Line -->
                    <LinearLayout style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_line" />
                        <TextView
                            android:id="@+id/tv_setting_line"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#8d4dab" />
                    </LinearLayout>

                    <!-- MC Model -->
                    <LinearLayout style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_mc_model" />
                        <TextView
                            android:id="@+id/tv_setting_mc_model"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#8d4dab" />
                    </LinearLayout>

                    <!-- MC No -->
                    <LinearLayout style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_mc_no" />
                        <EditText
                            android:id="@+id/tv_setting_mc_no1"
                            style="@style/setting_line_data"
                            android:singleLine="true"
                            android:text=""
                            android:background="#87c947" />
                    </LinearLayout>

                    <!-- MC Serial -->
                    <LinearLayout style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_mc_serial" />
                        <EditText
                            android:id="@+id/et_setting_mc_serial"
                            style="@style/setting_line_data"
                            android:singleLine="true"
                            android:text=""
                            android:background="#87c947" />
                    </LinearLayout>
                </LinearLayout>

                <!-- OEE SERVER INFO -->
                <LinearLayout
                    android:layout_width="520dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/section_title_text"
                        android:text="@string/title_server_info" />

                    <LinearLayout style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_server_ip" />
                        <EditText
                            android:id="@+id/et_setting_server_ip"
                            style="@style/setting_line_data"
                            android:singleLine="true"
                            android:text=""
                            android:background="#87c947" />
                    </LinearLayout>

                    <LinearLayout style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_server_port" />
                        <EditText
                            android:id="@+id/et_setting_port"
                            style="@style/setting_line_data"
                            android:singleLine="true"
                            android:text=""
                            android:background="#87c947" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <Button
                            android:id="@+id/btn_setting_check_server"
                            style="@style/tab_btn_orange"
                            android:layout_width="160dp"
                            android:background="#ba8e00"
                            android:stateListAnimator="@null"
                            android:text="@string/check" />
                    </LinearLayout>

                    <TextView
                        style="@style/section_title_text"
                        android:layout_marginTop="40dp"
                        android:text="ETC" />

                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:layout_width="240dp"
                            android:text="Long Touch Enable" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="#2f3f51">
                            <Switch
                                android:id="@+id/sw_long_touch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:checked="false"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="100dp"
            android:paddingBottom="20dp"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_setting_cancel"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:background="@drawable/shape_orange_rectangle_button"
                android:stateListAnimator="@null"
                android:text="@string/cancel"
                android:textSize="24sp"
                android:textColor="#fff"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btn_setting_confirm"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:background="@drawable/shape_orange_rectangle_button"
                android:stateListAnimator="@null"
                android:text="@string/save"
                android:textSize="24sp"
                android:textColor="#fff"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
