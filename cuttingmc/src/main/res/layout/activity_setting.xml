<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1c2c39">

        <include layout="@layout/layout_top_menu_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_setting_view"
                android:layout_width="420dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:background="#f8ad13"
                android:text="SETTING"
                android:textSize="38sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="1080dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- COUNTER DEVICE INFO -->
                <LinearLayout
                    android:layout_width="520dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:text="@string/title_counter_device_info"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:background="#000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="WiFi"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <TextView
                            android:id="@+id/tv_setting_wifi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:text="COUNTER DEVICE INFO"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#4d4d4d"/>
                    </LinearLayout>

                    <!-- IP -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="IP"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <TextView
                            android:id="@+id/tv_setting_ip"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:text="COUNTER DEVICE INFO"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#4d4d4d"/>
                    </LinearLayout>

                    <!-- MAC -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="MAC"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <TextView
                            android:id="@+id/tv_setting_mac"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:text="COUNTER DEVICE INFO"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#4d4d4d"/>
                    </LinearLayout>

                    <!-- Factory -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="@string/label_factory"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <TextView
                            android:id="@+id/tv_setting_factory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#8d4dab"/>
                    </LinearLayout>

                    <!-- Room -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="@string/label_room"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <TextView
                            android:id="@+id/tv_setting_room"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:text="COUNTER DEVICE INFO"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#8d4dab"/>
                    </LinearLayout>

                    <!-- Line -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="@string/label_line"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <TextView
                            android:id="@+id/tv_setting_line"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:text="COUNTER DEVICE INFO"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#8d4dab"/>
                    </LinearLayout>

                    <!-- MC No -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="@string/label_mc_no"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <EditText
                            android:id="@+id/tv_setting_mc_no1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#87c947"/>
                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:gravity="center"-->
                        <!--android:text="-"-->
                        <!--android:textSize="20sp"-->
                        <!--android:textColor="#fff"/>-->
                        <!--<EditText-->
                        <!--android:id="@+id/tv_setting_mc_no2"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:gravity="center"-->
                        <!--android:singleLine="true"-->
                        <!--android:inputType="number"-->
                        <!--android:text=""-->
                        <!--android:textSize="20sp"-->
                        <!--android:textColor="#fff"-->
                        <!--android:maxLength="3"-->
                        <!--android:background="#87c947"/>-->
                    </LinearLayout>

                    <!-- MC Model -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="@string/label_mc_model"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <TextView
                            android:id="@+id/tv_setting_mc_model"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:text="COUNTER DEVICE INFO"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#8d4dab"/>

                    </LinearLayout>

                    <!-- MC Serial -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="@string/label_mc_serial"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <EditText
                            android:id="@+id/et_setting_mc_serial"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#87c947"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- OEE SERVER INFO -->
                <LinearLayout
                    android:layout_width="520dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:text="@string/title_server_info"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:background="#000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="@string/label_server_ip"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <EditText
                            android:id="@+id/et_setting_server_ip"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#87c947"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="@string/label_server_port"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <EditText
                            android:id="@+id/et_setting_port"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#87c947"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <Button
                            android:id="@+id/btn_setting_check_server"
                            android:layout_width="160dp"
                            android:layout_height="44dp"
                            android:background="#f8ad13"
                            android:stateListAnimator="@null"
                            android:text="@string/check"
                            android:textSize="24sp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:text="ETC"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:background="#000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="240dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="Long Touch Enable"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:background="#2f3f51"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="#2f3f51">

                            <Switch
                                android:id="@+id/sw_long_touch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="100dp"
            android:paddingBottom="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_setting_cancel"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:background="@drawable/shape_orange_rectangle_button"
                android:stateListAnimator="@null"
                android:text="@string/cancel"
                android:textSize="24sp"
                android:textColor="#fff"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_setting_confirm"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:background="@drawable/shape_orange_rectangle_button"
                android:stateListAnimator="@null"
                android:text="@string/save"
                android:textSize="24sp"
                android:textColor="#fff"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
