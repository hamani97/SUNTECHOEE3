<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1c2c39">

        <include layout="@layout/layout_top_menu_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            style="@style/tab_btn_block">
            <Button
                android:id="@+id/btn_setting_system"
                style="@style/tab_btn_on"
                android:layout_width="220dp"
                android:stateListAnimator="@null"
                android:text="SYSTEM SETTING" />
            <Button
                android:id="@+id/btn_setting_count"
                style="@style/tab_btn_off"
                android:layout_width="220dp"
                android:stateListAnimator="@null"
                android:text="COUNT SETTING" />
            <Button
                android:id="@+id/btn_setting_target"
                style="@style/tab_btn_off"
                android:layout_width="220dp"
                android:stateListAnimator="@null"
                android:text="TARGET SETTING" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="1080dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- COUNTER DEVICE INFO -->
                <LinearLayout
                    android:layout_width="520dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/section_title_text"
                        android:text="@string/title_counter_device_info" />

                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="WiFi" />
                        <TextView
                            android:id="@+id/tv_setting_wifi"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#4d4d4d" />
                    </LinearLayout>

                    <!-- IP -->
                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="IP" />
                        <TextView
                            android:id="@+id/tv_setting_ip"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#4d4d4d" />
                    </LinearLayout>

                    <!-- MAC -->
                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="MAC" />
                        <TextView
                            android:id="@+id/tv_setting_mac"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#4d4d4d" />
                    </LinearLayout>

                    <!-- Factory -->
                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_factory" />
                        <TextView
                            android:id="@+id/tv_setting_factory"
                            style="@style/setting_line_data"
                            android:text=""
                            android:background="#8d4dab" />
                    </LinearLayout>

                    <!-- Room -->
                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_room" />
                        <TextView
                            android:id="@+id/tv_setting_room"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#8d4dab" />
                    </LinearLayout>

                    <!-- Line -->
                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_line" />
                        <TextView
                            android:id="@+id/tv_setting_line"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#8d4dab" />
                    </LinearLayout>

                    <!-- MC No -->
                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_mc_no" />
                        <EditText
                            android:id="@+id/tv_setting_mc_no1"
                            style="@style/setting_line_data"
                            android:singleLine="true"
                            android:text=""
                            android:background="#87c947" />
                    </LinearLayout>

                    <!-- MC Model -->
                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_mc_model" />
                        <TextView
                            android:id="@+id/tv_setting_mc_model"
                            style="@style/setting_line_data"
                            android:text="-"
                            android:background="#8d4dab" />
                    </LinearLayout>

                    <!-- MC Serial -->
                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_mc_serial" />
                        <EditText
                            android:id="@+id/et_setting_mc_serial"
                            style="@style/setting_line_data"
                            android:singleLine="true"
                            android:text=""
                            android:background="#87c947" />
                    </LinearLayout>
                </LinearLayout>

                <!-- OEE SERVER INFO -->
                <LinearLayout
                    android:layout_width="520dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/section_title_text"
                        android:text="@string/title_server_info" />

                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_server_ip" />
                        <EditText
                            android:id="@+id/et_setting_server_ip"
                            style="@style/setting_line_data"
                            android:singleLine="true"
                            android:text=""
                            android:background="#87c947" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:text="@string/label_server_port" />
                        <EditText
                            android:id="@+id/et_setting_port"
                            style="@style/setting_line_data"
                            android:singleLine="true"
                            android:text=""
                            android:background="#87c947" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <Button
                            android:id="@+id/btn_setting_check_server"
                            style="@style/tab_btn_orange"
                            android:layout_width="160dp"
                            android:background="#ba8e00"
                            android:stateListAnimator="@null"
                            android:text="@string/check" />
                    </LinearLayout>

                    <TextView
                        style="@style/section_title_text"
                        android:layout_marginTop="40dp"
                        android:text="ETC" />

                    <LinearLayout
                        style="@style/setting_line">
                        <TextView
                            style="@style/setting_line_title"
                            android:layout_width="240dp"
                            android:text="Long Touch Enable" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="#2f3f51">
                            <Switch
                                android:id="@+id/sw_long_touch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:checked="false"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="100dp"
            android:paddingBottom="20dp"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_setting_cancel"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:background="@drawable/shape_orange_rectangle_button"
                android:stateListAnimator="@null"
                android:text="@string/cancel"
                android:textSize="24sp"
                android:textColor="#fff"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btn_setting_confirm"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:background="@drawable/shape_orange_rectangle_button"
                android:stateListAnimator="@null"
                android:text="@string/confirm"
                android:textSize="24sp"
                android:textColor="#fff"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
