<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1c2c39">

        <include layout="@layout/layout_top_menu_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="1080dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_work_info_server"
                    style="@style/tab_btn"
                    android:layout_width="150dp"
                    android:background="#ba8e00"
                    android:stateListAnimator="@null"
                    android:text="Server" />
                <Button
                    android:id="@+id/btn_work_info_manual"
                    style="@style/tab_btn"
                    android:layout_width="150dp"
                    android:stateListAnimator="@null"
                    android:text="Manual" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1080dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- AVAILABLE INFO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <!--<TextView-->
                        <!--style="@style/section_title_text"-->
                        <!--android:text="@string/title_available_info" />-->
                    <LinearLayout
                        style="@style/grid_header"
                        android:layout_width="match_parent">
                        <TextView
                            style="@style/grid_header_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/list_item_shift" />
                        <TextView
                            style="@style/grid_header_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/list_item_work_time" />
                        <TextView
                            style="@style/grid_header_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/list_header_planned_time1" />
                        <TextView
                            style="@style/grid_header_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/list_header_planned_time2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:background="#000">
                        <ListView
                            android:id="@+id/lv_available_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@color/list_item_bg_color"
                            android:dividerHeight="0dp"
                            android:background="@color/list_item_bg_color" />
                    </LinearLayout>

                </LinearLayout>

                <!-- OPERATOR INFO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="520dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/section_title_text"
                            android:text="@string/title_operator_info" />
                        <LinearLayout
                            style="@style/grid_header"
                            android:layout_width="match_parent">
                            <TextView
                                style="@style/grid_header_text"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/list_header_employee_number" />
                            <TextView
                                style="@style/grid_header_text"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/list_header_name" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal"
                            android:background="#000">
                            <ListView
                                android:id="@+id/lv_operator_info"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@color/list_item_bg_color"
                                android:dividerHeight="0dp"
                                android:background="@color/list_item_bg_color" />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/setting_line">
                            <TextView
                                style="@style/setting_line_title"
                                android:text="@string/search" />
                            <EditText
                                android:id="@+id/et_setting_server_ip"
                                style="@style/setting_line_data"
                                android:text=""
                                android:background="#87c947" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="520dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:orientation="vertical">
                        <TextView
                            style="@style/section_title_text"
                            android:text="@string/title_last_worker" />

                        <LinearLayout
                            style="@style/grid_header"
                            android:layout_width="match_parent">
                            <TextView
                                style="@style/grid_header_text"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/list_header_employee_number" />
                            <TextView
                                style="@style/grid_header_text"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/list_header_name" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginBottom="8dp"
                            android:background="#000"
                            android:orientation="vertical">
                            <ListView
                                android:id="@+id/lv_last_worker"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@color/list_item_bg_color"
                                android:dividerHeight="0dp"
                                android:background="@color/list_item_bg_color" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="100dp"
            android:paddingBottom="20dp"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_setting_cancel"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:background="@drawable/shape_orange_rectangle_button"
                android:stateListAnimator="@null"
                android:text="@string/cancel"
                android:textSize="24sp"
                android:textColor="#fff"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btn_setting_confirm"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:background="@drawable/shape_orange_rectangle_button"
                android:stateListAnimator="@null"
                android:text="@string/save"
                android:textSize="24sp"
                android:textColor="#fff"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
